<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/appBarLayoutHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/statusViewCus"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/names"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="客服"
                android:textColor="#FF445779"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/topImgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgToCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_customer" />

            <TextView
                android:id="@+id/tv_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28"
                android:gravity="center"
                android:text="在线客服"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Online Customer Service"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvM1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6" />


        <TextView
            android:id="@+id/tvDl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_18"
            android:letterSpacing="0.05"
            android:text="代理客服"
            android:textColor="@color/alivc_blue_2"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvM2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6" />

        <TextView
            android:id="@+id/tvWt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_18"
            android:letterSpacing="0.05"
            android:text="常见问题"
            android:textColor="@color/alivc_blue_2"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvM3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6" />


        <TextView
            android:id="@+id/tvJd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_18"
            android:letterSpacing="0.05"
            android:text="更多解答"
            android:textColor="@color/alivc_blue_2"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvM4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6" />
    </LinearLayout>

</ScrollView>