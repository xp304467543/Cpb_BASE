<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/taskImg"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_task" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/alivc_blue_3"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/taskImg"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTaskCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/alivc_blue_6"
        android:textSize="@dimen/sp_10"
        app:layout_constraintStart_toEndOf="@+id/taskImg"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btGo"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/blue_1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F2F6F7"
        app:layout_constraintEnd_toEndOf="@+id/btGo"
        app:layout_constraintStart_toStartOf="@+id/taskImg" />
</androidx.constraintlayout.widget.ConstraintLayout>