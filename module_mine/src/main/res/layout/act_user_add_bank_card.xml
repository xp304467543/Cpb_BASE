<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="存款人"
            android:textColor="#343434" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardUserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:textSize="@dimen/sp_12"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:hint="请输入存款人姓名" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="存款账户"
            android:textColor="#343434" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardUserNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:maxLength="22"
            android:inputType="number"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:hint="请输入存款账户" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="备注"
            android:textColor="#343434" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCardUserDes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@null"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:hint="请输入备注" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE" />
    
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCardCommit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/color_8899AA"
        android:layout_marginTop="@dimen/dp_80"
        android:text="提交"
        android:gravity="center"
        android:background="@drawable/button_grey_background"/>
</LinearLayout>