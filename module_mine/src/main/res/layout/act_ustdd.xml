<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址名称:"
        android:textColor="@color/color_333333" />


    <EditText
        android:id="@+id/ed_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入钱包地址"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="虚拟币协议:"
        android:textColor="@color/color_333333" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_xy1"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_check"
            android:gravity="center"
            android:text="TCR20"
            android:textColor="@color/color_333333" />

        <TextView
            android:id="@+id/tv_xy2"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@mipmap/ic_uncheck"
            android:gravity="center"
            android:text="ECR20"
            android:textColor="@color/color_333333" />

        <TextView
            android:id="@+id/tv_xy3"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@mipmap/ic_uncheck"
            android:gravity="center"
            android:text="OMNI"
            android:textColor="@color/color_333333" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="钱包地址:"
        android:textColor="@color/color_333333" />


    <EditText
        android:id="@+id/ed_address2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入钱包地址"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="手机号码:"
        android:textColor="@color/color_333333" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@null"
        android:hint="请输入11位手机号码"
        android:inputType="number"
        android:maxEms="11"
        android:maxLines="1"
        android:maxLength="11"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="手机验证码:"
        android:textColor="@color/color_333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_sms"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:maxEms="4"
            android:maxLines="1"
            android:maxLength="4"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/get_sms"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="提示： 请确保钱包地址正确，如地址错误后果自行承担！"
        android:textColor="@color/alivc_blue_1"
        android:textSize="@dimen/sp_12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_45"
        android:text="提交"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button_blue_background"/>
</LinearLayout>