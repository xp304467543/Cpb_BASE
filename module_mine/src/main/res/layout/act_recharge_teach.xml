<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5f7fa"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clickLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rImg"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_12" />

        <TextView
            android:id="@+id/rName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            app:srcCompat="@mipmap/arrow_right" />
    </LinearLayout>


    <!--    <ScrollView-->
    <!--        android:id="@+id/scrollImg"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:overScrollMode="never"-->
    <!--        android:scrollbars="none">-->

    <com.customer.component.image.subscaleview.SubsamplingScaleImageView
        android:id="@+id/imgShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--    </ScrollView>-->

    <ScrollView
        android:id="@+id/xuniJiaoCheng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_uuu1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_uu_12" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/teachUstd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="数字货币购买教程"
                    android:textColor="@color/alivc_blue"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bb_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_uu_4"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingEnd="@dimen/dp_25">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/ic_uu_13" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="币汇"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="流畅的法币出入金支付服务平台\n\n安全的数字货币钱包以及秒级到账的支付速度"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bb_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_uu_4"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingEnd="@dimen/dp_25">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/ic_uu_14" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="火币"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="全球知名老牌交易所之一\n\n支持法币，币币交易，币种多，成交量大"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bb_3"
                        android:layout_width="0dp"
                        android:layout_height="260dp"
                        android:layout_weight="1"
                        android:background="@mipmap/ic_uu_4"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingEnd="@dimen/dp_25">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/ic_uu_15" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="币安"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="超过100种加密货币的交易平台\n\n交易量为全世界最大的加密货币交易所"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="*您也可以选择其他数字货币交易平台进行数字货币的买卖"
                    android:textColor="@color/color_FF513E"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>