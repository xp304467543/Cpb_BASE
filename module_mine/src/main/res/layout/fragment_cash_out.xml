<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/alivc_blue_1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:text="选择渠道"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/teachRecharge"
                android:layout_width="80dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="充值教程"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:orientation="horizontal"
            tools:ignore="UselessParent">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlAddBankItem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/dp_20"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:drawableStart="@mipmap/ic_ming_add"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="添加银行卡"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="RelativeOverlap" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f5f5f5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlBankItem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20">

                        <ImageView
                        android:id="@+id/imgBankItem"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/imgBankItem"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:id="@+id/tvBankNameItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvBankCodeUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tvBankCodeItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f5f5f5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAddBankItem_u1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/dp_20">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:drawableStart="@mipmap/ic_ming_add"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="添加虚拟币钱包地址"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="RelativeOverlap" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f5f5f5" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlBankItem_u1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgBankItem_u1"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_xnb" />


                    <TextView
                        android:id="@+id/tvBankNameItem_u1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/imgBankItem_u1"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f5f5f5" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_s_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:padding="@dimen/dp_20"
                    android:src="@mipmap/ic_yes" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_s_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:padding="@dimen/dp_20"
                    android:src="@mipmap/ic_no" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="提现金额"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20">

                <TextView
                    android:id="@+id/tvFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dp_8"
                    android:text="￥"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />

                <EditText
                    android:id="@+id/etGetMoneyToBank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_toEndOf="@+id/tvFirst"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_30" />

                <TextView
                    android:id="@+id/tvGetMoneyAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="全部提现"
                    android:textColor="@color/alivc_blue_1"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_f5f5f5" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout_Info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:src="@mipmap/ic_mine_tips_red" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layouUstd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_ss_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#FF6E6E6E"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_ss_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#FF6E6E6E"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_FF513E"
                    android:text="*低于5000提款请使用区块链协议TRC20"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center"
                android:text="*请核实您的提现账户是否正确,避免造成不必要的麻烦"
                android:textColor="@color/alivc_blue_1"
                android:textSize="@dimen/sp_10" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btUserGetCash"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_34"
                android:background="@drawable/button_blue_background"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="说明:提现服务费会根据用户提现银行,提现账户\n以及用户的
个人情况不同而实时变动"
                android:textColor="@color/alivc_blue_6"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>