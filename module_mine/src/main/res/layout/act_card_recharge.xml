<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <com.lib.basiclib.base.round.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        app:rv_backgroundColor="#f6f6f6"
        app:rv_cornerRadius="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:text="账号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#c9c8c8" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@null"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="请输入18位数卡号"
            android:maxLength="18"
            android:textSize="@dimen/sp_12" />
    </com.lib.basiclib.base.round.RoundLinearLayout>


    <com.lib.basiclib.base.round.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        app:rv_backgroundColor="#f6f6f6"
        app:rv_cornerRadius="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:text="密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#c9c8c8" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@null"
            android:maxLength="6"
            android:hint="请输入6位数密码"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:textSize="@dimen/sp_12" />
    </com.lib.basiclib.base.round.RoundLinearLayout>

    <LinearLayout
        android:id="@+id/linContact"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有卡密？联系代理充值，购买卡密"
            android:gravity="center"
            android:drawableStart="@mipmap/ic_kami_1"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11" />


    </LinearLayout>

    <com.lib.basiclib.base.round.RoundTextView
        android:id="@+id/goBuyCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center"
        app:rv_strokeWidth="@dimen/dp_1"
        app:rv_strokeColor="@color/color_FF513E"
        app:rv_cornerRadius="@dimen/sp_25"
        android:text="购买卡密"
        android:textStyle="bold"
        android:textColor="@color/color_FF513E" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_go_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:background="@drawable/button_blue_background"
        android:text="确认充值"
        android:textColor="@color/white" />
</LinearLayout>