<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <View
        android:id="@+id/stateVideoMore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/moreBack"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/ic_arrow_back_black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="更多视频"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:src="@mipmap/ic_video_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTab2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_5"
        android:orientation="horizontal">

        <com.lib.basiclib.widget.tab.MagicIndicator
            android:id="@+id/magic_indicator1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgVideoPop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_9"
            android:src="@drawable/seletor_movie" />

    </LinearLayout>


    <com.lib.basiclib.widget.tab.MagicIndicator
        android:id="@+id/magic_indicator2"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_height="@dimen/dp_40" />

    <com.lib.basiclib.widget.tab.MagicIndicator
        android:id="@+id/magic_indicator3"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_height="@dimen/dp_40" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpMoreVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>