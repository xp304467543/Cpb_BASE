<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_10">

    <ImageView
        android:id="@+id/imgRankLevel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRankLevel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgRankUserPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />


    <ImageView
        android:id="@+id/imgRankUserPhoto"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_20"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_base_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRankLevel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRankUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgRankUserPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="杀快点粉红色杀快点粉" />

    <ImageView
        android:id="@+id/imgRankUserVipLevel"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_5"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/tvRankUserName"
        app:layout_constraintStart_toEndOf="@+id/tvRankUserName"
        app:layout_constraintTop_toTopOf="@+id/tvRankUserName" />

    <TextView
        android:id="@+id/tvRankRewardNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="杀快点粉红色" />
</androidx.constraintlayout.widget.ConstraintLayout>