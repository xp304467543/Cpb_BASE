<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.lib.basiclib.base.round.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:lineSpacingExtra="3dp"
            android:text="我们提供7*24小时的电话客服回电服务,如果您在使用本平台时遇到问题,请选择您的问题类型和希望的客服语言我们在第一时间给您致电！我们提供7*24小时的电话客服回电服务，如果您在使用本平台时遇到问题，请选择您的问题类型和希望的客服语言，我们在第一时间给您致电！"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_11" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/dp_14"
                android:text="反馈类型:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="选择语言:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="会员账号:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCount"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/radio_button_normal"
                android:gravity="center_vertical"
                android:hint="请输入会员账号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电话号码:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/radio_button_normal"
                android:gravity="center_vertical"
                android:hint="手机号码或者座机号码"
                android:inputType="number"
                android:maxLength="11"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btDialogReport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_35"
            android:background="@drawable/button_blue_background"
            android:gravity="center"
            android:text="提交信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


    </com.lib.basiclib.base.round.RoundLinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id= "@+id/imgDialogClose"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_18"
        android:src="@mipmap/ic_close_round" />

</LinearLayout>