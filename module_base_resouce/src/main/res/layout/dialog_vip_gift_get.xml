<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.lib.basiclib.base.round.RoundLinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="VIP专属礼物领取"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收件人:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/bg_grey"
                android:hint="请输入收件人姓名"
                android:paddingStart="@dimen/dp_5"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="地     址:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/userAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@color/bg_grey"
                android:hint="请输入收获地址"
                android:paddingStart="@dimen/dp_5"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收件人电话："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/userPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_grey"
                android:inputType="number"
                android:maxLength="12"
                android:gravity="center_vertical"
                android:hint="请输入收件人电话"
                android:paddingStart="@dimen/dp_5"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/color_FF513E"
            android:gravity="center"
            android:text="注：VIP7美女空降服务，本公司会以电话提前联系您请保持电话畅通"
            android:layout_marginTop="@dimen/dp_20"/>
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="提交"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/color_999999"
            android:background="@drawable/button_grey_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"/>

    </com.lib.basiclib.base.round.RoundLinearLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btClose"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="12dp"
        android:src="@mipmap/ic_close_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutContent" />

</androidx.constraintlayout.widget.ConstraintLayout>