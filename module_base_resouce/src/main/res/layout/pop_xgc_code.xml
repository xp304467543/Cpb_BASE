<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_grey_line_white_background">


        <View
            android:id="@+id/linTop"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bfbfbf"
            app:layout_constraintTop_toBottomOf="@+id/layoutTop" />

        <LinearLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/grey_f5f7fa"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="期号"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_22"
                    android:gravity="center"
                    android:text="开奖号码"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bfbfbf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正2"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正3"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正4"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正5"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正6"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="特码"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:text="特码"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bfbfbf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_22"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="大小"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bfbfbf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单双"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bfbfbf"
            app:layout_constraintTop_toTopOf="@+id/layoutTop" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvXgcContent"
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linTop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_34"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/rvXgcContent">

            <com.lib.basiclib.base.round.RoundTextView
                android:id="@+id/tvClose"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11"
                app:rv_backgroundColor="#F6F7FB"
                app:rv_cornerRadius="@dimen/dp_15"
                app:rv_strokeColor="@color/color_999999"
                app:rv_strokeWidth="0.5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLookMore"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@drawable/button_blue_background"
                android:gravity="center"
                android:text="查看完整走势"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>