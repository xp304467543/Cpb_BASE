<?xml version="1.0" encoding="utf-8"?>
<com.customer.component.SideslipDeleteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_1">

            <TextView
                android:id="@+id/tvBetPlayName"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tvBetPlayType"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tvBetPlayOdds"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="10dp">

                <EditText
                    android:id="@+id/tvBetPlayMoney"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17.5dp"
                    android:background="@drawable/bet_editext"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/color_FF513E"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_F5F7FA" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvBetDelete"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/color_FF513E"
        android:text="删除"
        android:textColor="@color/white"/>
</com.customer.component.SideslipDeleteLayout>