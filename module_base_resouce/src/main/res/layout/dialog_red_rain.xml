<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/redBg"
        android:layout_width="300dp"
        android:layout_height="360dp"
        app:srcCompat="@mipmap/img_red_packet_gift_00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClose"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:padding="@dimen/dp_10"
        app:srcCompat="@mipmap/bt_redrain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redBg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/redMoney"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:gravity="center"
        android:text="8888"
        android:textColor="#AEE06F40"
        android:textSize="45sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/redBg"
        app:layout_constraintStart_toStartOf="@+id/redBg"
        app:layout_constraintTop_toTopOf="@+id/redBg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgGoOrClose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imgClose"
        app:layout_constraintStart_toStartOf="@+id/imgClose"
        app:layout_constraintTop_toTopOf="@+id/imgClose"
        app:srcCompat="@mipmap/ic_get_red" />

</androidx.constraintlayout.widget.ConstraintLayout>