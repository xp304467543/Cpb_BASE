<?xml version="1.0" encoding="utf-8"?>
<com.lib.basiclib.base.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:padding="@dimen/dp_10"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCenter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_140"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_pan_cz" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeImg"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_8"
        app:srcCompat="@mipmap/ic_close_b" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/centerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="您的余额不足请充值"
        android:textColor="@color/color_999999" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goRecharge"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/centerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/button_blue_background"
        android:gravity="center"
        android:text="去充值"
        android:textColor="@color/white" />
</com.lib.basiclib.base.round.RoundRelativeLayout>