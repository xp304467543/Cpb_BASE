<?xml version="1.0" encoding="utf-8"?>
<com.lib.basiclib.base.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/dp_15">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#445779"
        android:textSize="17sp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:padding="@dimen/dp_10"
        app:srcCompat="@mipmap/ic_close" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/qrCode"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#445779"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btOpen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/tvWx"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/button_blue_background"
        android:gravity="center"
        android:text="复制客服账号"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btOpen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="请打开软件扫码客服二维码并添加客服账号联系 "
        android:textColor="@color/alivc_blue_1"
        android:textSize="10sp" />

</com.lib.basiclib.base.round.RoundRelativeLayout>