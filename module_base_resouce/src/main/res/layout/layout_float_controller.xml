    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="@dimen/dp_15"
        android:indeterminateDrawable="@drawable/loading_rotate"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dp_12"
        android:layout_gravity="end"
        android:contentDescription="@string/app_loading"
        android:src="@drawable/dkplayer_ic_action_close" />

    <ImageView
        android:id="@+id/btn_skip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dp_12"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/app_loading"
        android:src="@drawable/dkplayer_ic_action_fullscreen" />


    <ImageView
        android:id="@+id/btn_rotate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dp_12"
        android:contentDescription="@string/app_loading"
        android:src="@mipmap/rotation" />
</FrameLayout>